@{
   if (!WebSecurity.IsAuthenticated)
     {
        
        Response.StatusCode=401;
        Response.End(); 
     }
   var db=Database.Open("fb1ae");
   var dosyaBoyut=Request["DosyaBoyut"];
   var toplamDosyaAlani= Convert.ToDouble(db.QueryValue("SELECT ISNULL(SUM(Boyut),0) as Toplam FROM Dosya WHERE UserID=@0 AND Silindi=0",WebSecurity.CurrentUserId)) + Convert.ToDouble(dosyaBoyut);
   var queryAbonelik=db.QuerySingle("SELECT * FROM Abone INNER JOIN UyelikPaketleri ON Abone.PaketID=UyelikPaketleri.PaketID WHERE Abone.UserID=@0 AND Durum=1",WebSecurity.CurrentUserId);
   db.Close();
    
    if (toplamDosyaAlani>Convert.ToDouble(queryAbonelik.DepolamaAlani))
     {
         Response.StatusCode=502;
         Response.End(); 
     }  
     else
     {
         Response.Write("OK");
         Response.End();
     }
     
       
}

