@{
    
/*----------------------------------------------------------------------------------
    Bu prosedür ders panosundan bir mesaj siler.
    Bu prosedürü sadece dersin sahibi ve mesajın sahibi çalıştırabilir.
  ---------------------------------------------------------------------------------*/
    if (!WebSecurity.IsAuthenticated)
   
        {
            Response.StatusCode=401;
            Response.End();
                   
        }  

    // Mesaj ID sini oku
    var ID=Request["ID"];
    
    // MesajID boşsa hata kodu döndür.
    if (string.IsNullOrEmpty(ID))
     {
    
       Response.StatusCode=500;
       Response.End();
     }


     var db=Database.Open("fb1ae");

      var queryIslem=db.QueryValue("exec dbo.Ders_PanodanMesajSil @0,@1",WebSecurity.CurrentUserId,ID);

    if (queryIslem=="OK")
    {
        db.Close();
        Response.Write("OK");
        Response.End();    
    }
    else
    {
        db.Close();
        Response.StatusCode=501;
        Response.End();
    }
    
}



