@{
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Hesap/Giris?returnUrl=Dosya");
    }
    Layout = "~/Shared/_LayoutYeni.cshtml";  
 
   var konum=Request.QueryString["Konum"];

   if (string.IsNullOrEmpty(konum))
      {
          konum="-1";
      }

    var db=Database.Open("fb1ae");
    var queryKullanici=db.QuerySingle("SELECT * FROM Profiles INNER JOIN UyelikTurleri ON Profiles.UyelikTuru=UyelikTurleri.UyelikID WHERE Profiles.userID=@0",WebSecurity.CurrentUserId);
    var dil=queryKullanici.Dil;

    if (dil=="tr")
       {
           Culture=UICulture="tr-TR";
       }

       IEnumerable<dynamic> queryDosyalar=null;
       IEnumerable<dynamic> queryDersler=null;

    
        if (konum=="-1")
        {
            queryDosyalar=db.Query("SELECT * FROM Dosya WHERE userID=@0 AND Silindi=0 AND Dosya.YuklenmeTuru=1 ORDER BY EklenmeTarihi DESC",WebSecurity.CurrentUserId);
            queryDersler=db.Query("SELECT  * FROM Ders WHERE Silindi=0 AND userID=@0 AND Arsivlendi=0",WebSecurity.CurrentUserId);
        }
    
        else 
        {

            queryDosyalar=db.Query("SELECT * FROM Dosya INNER JOIN DersDosyalari ON DersDosyalari.DosyaID=Dosya.DosyaID WHERE Dosya.userID=@0 AND Dosya.Silindi=0 AND DersDosyalari.DersID=@1 ORDER BY EklenmeTarihi DESC",WebSecurity.CurrentUserId,konum);
        }
 
    db.Close();
  
}

@section Gezinti {
    <li class="active">@Resources.Resource.lblDosyalar</li>
}


@section SayfaBasligi
{
   <h1>@Resources.Resource.lblDosyalar</h1>
}

   

<div class="row">
    <span id="spnKonum" data-Konum="@konum"></span>
   <div class="col-lg-12">
          
       @if (Roles.IsUserInRole("Ogretici"))
       {
       
        <button type="button" class="btn btn-primary btn-lg" id="btnCokluSil" disabled>
            <i class="fa fa-times"></i> Sil
        </button>
   
        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modalDersSec" disabled="true" id="btnDerstePaylas">
            <i class="fa fa-share"></i> Derste Paylaş
        </button>

        <br>
        <br>

       }

             <div class="page-breadcrumbs">

                    <ul class="breadcrumb">
                            <li><a href="@Href("~/Dosya/Liste")"><i class="fa fa-cloud"></i> Dosyalar </a></li>
                       
                    </ul>
         </div>  

           <br>
        <table id="lstDosyalar" class="table table-hover">
        <thead>
            <tr>
               <th></th>
                <th>@Resources.Resource.lblAd</th> 
               
                <th></th>
               
                <th></th>
                
                <th> @Resources.Resource.lblBoyut</th> 
               
                <th> @Resources.Resource.lblEklenmeTarihi</th>
               
                
            </tr>
        </thead>
         <tbody>
             @if (konum=="-1")
             {
                
                foreach (var ders in queryDersler)
                {
                  <tr>
                     <td class="col-md-1 text-center"></td>
                     <td>
                        <a href="@Href("~/Dosya/Liste?Konum=" + ders.DersID)"><i class="fa fa-folder fa-2x"></i> @ders.DersAdi</a>
                     </td>
                     <td></td>
                     <td></td>
                     <td>--</td>
                     <td></td>
                 </tr>
                }
            }
             else
             {
            
            foreach (var dosya in queryDosyalar)
            {
                
                <tr class="DosyaSatiri">
                    <td class="col-md-1 text-center">
                       <label>
                       <input type="checkbox" class="colored-primary chkBoxOge"  data-OgeID="d_@dosya.DosyaID">
                       <span class="text"></span>
                      </label>                    </td>
                    <td><a href="@Href("~/Dosya/Indir?DosyaID=")@dosya.DosyaID">@HelperDosya.DosyaIkonu(dosya.DosyaAdi) @dosya.DosyaAdi</a>
                  
                    </td>
  
                      <td>

                         <div class="dropdown">

                        
                                  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-primary btn-xs">
                                    <i class="fa fa-cog"></i>
                                    <span class="caret"></span>
                                  </button>
                                  
                                  <ul class="dropdown-menu" aria-labelledby="dLabel">
                                      <li><a href="@Href("~/Dosya/Indir?DosyaID=")@dosya.DosyaID"><i class="fa fa-cloud-download"></i> @Resources.Resource.lblKarşıdanYukle</a></li>
                                      <li><a href="@Href("~/Dosya/Ayarlar?DosyaID=")@dosya.DosyaID"><i class="fa fa-cog"></i> @Resources.Resource.lblDosyaAyarlari</a></li>
                                      <li><a href="@Href("~/Dosya/Indirenler?DosyaID=")@dosya.DosyaID"><i class="fa fa-arrow-circle-o-down"></i> @Resources.Resource.lblDosyayiYukleyenKullanicilar</a></li>
                                      <li><a href="#" class="btnDersteDosyaPaylas" data-OgeID="d_@dosya.DosyaID" data-toggle="modal" data-target="#modalDersSec"><i class="fa fa-share"></i> Derste Paylaş</a></li>
                                      <li><a href="javascript:void(0);" class="btnOgeSil" data-OgeID="d_@dosya.DosyaID"><i class="fa fa-remove"></i> @Resources.Resource.lblDosyayiSil</a></li>
                                  </ul>
                            </div>

                    </td>
                   
   
                    
                    <td>
                        @if (dosya.YuklenmeTuru==2)
                        {
                            <label class="label label-orange" title="@Resources.Resource.lblOdevGonderisi" data-toggle="tooltip" data-placement="top"><i class="fa fa-clock-o"></i></label>
                        }
                    
                    </td>
 
                    <td>

                    @Genel.StorageLabel((double)dosya.Boyut)
                    </td>

                  

                    <td>@Genel.DateLabel(dosya.EklenmeTarihi,dil)</td>
                    
                   
                </tr>
            }

            }
         </tbody>
    </table>

        </div>
    
  
    </div>
@if (Roles.IsUserInRole("Ogretici"))
       {
<div class="modal" id="modalDosyaEkle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel1">@Resources.Resource.lblYeniBirDokumanEkle</h4>
      </div>
      <div class="modal-body">
        

         <label>@Resources.Resource.lblAciklama</label>
         <textarea class="form-control" name="txtAciklama" id="txtAciklama" placeholder="@Resources.Resource.msgEklenecekDokumanileIlgiliKisaAciklamaGir" required></textarea>
         <label>@Resources.Resource.lblBilgisayardaDosyaSec</label>
         <input type="file" class="form-control" id="txtDosya" required name="file" placeholder="@Resources.Resource.lblDosyaSec">
               
        
           
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="btnDosyaEkle">@Resources.Resource.lblTamam</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resource.lblIptal</button>
        
      </div>
    </div>
  </div>
</div>


<div class="modal" id="modalKlasorEkle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel2">Klasör Oluştur</h4>
      </div>
      <div class="modal-body">
        

         <label>Klasör Adı:</label>
         <input type="text" class="form-control" name="txtKlasorAdi" id="txtKlasorAdi" placeholder="Oluşturulmasını istediğiniz klasörünü adını bu alan girin..." required />
        
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="btnKlasorOlustur">@Resources.Resource.lblTamam</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resource.lblIptal</button>
        
      </div>
    </div>
  </div>
</div>


<div class="modal" id="modalKlasorSec" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel3">Klasör Seç</h4> 
      </div>
      <div class="modal-body" style="height:300px;overflow: auto;">
        <i class="fa fa-spinner fa-spin fa-2x hide" id="spinnerIcon"></i>
        <table class="table table-hover" id="tableKlasorSecKlasorListesi">
            
         
        </table>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="btnKlasoreTasi">@Resources.Resource.lblTamam</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resource.lblIptal</button>
        
      </div>
    </div>
  </div>
</div>


<div class="modal" id="modalDersSec" tabindex="-1" role="dialog" aria-labelledby="myModalLabel4" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel4">Ders Seç</h4> 
      </div>
      <div class="modal-body" style="height:300px;overflow: auto;">
        <i class="fa fa-spinner fa-spin fa-2x hide" id="spinnerIconDers"></i>
        <table class="table table-hover" id="tableVerilenDerslerListesi">
            
         
        </table>
      </div>
      <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="btnDerstePaylasTamam">@Resources.Resource.lblTamam</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resource.lblIptal</button>
        
      </div>
    </div>
  </div>
</div>

    }

@section js
{
 <script src="@Href(string.Format("~/Dosya/Js/Dosya.Labels.{0}.js",dil))"></script>
 <script src="@Href("~/Dosya/Js/Liste.min.js")"></script>  
}