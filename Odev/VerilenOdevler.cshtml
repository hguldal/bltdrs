@{
    if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Hesap/Giris?returnUrl=Odev/VerilenOdevler");
    }
    Layout = "~/Shared/_LayoutYeni.cshtml";  

    if (!Roles.IsUserInRole("Ogrenci"))
    {
        Response.Redirect("~/Shared/Hata");
        Response.End();
    }

    var db=Database.Open("fb1ae");
    var queryKullanici=db.QuerySingle("SELECT * FROM Profiles WHERE userID=@0",WebSecurity.CurrentUserId);
   
    var dil=queryKullanici.Dil;
    if (dil=="tr")
       {
           Culture=UICulture="tr-TR";
       }
    
    var queryOdevler=db.Query("SELECT * FROM Odev INNER JOIN Ders ON Odev.DersID=Ders.DersID WHERE Odev.Silindi=0 AND Ders.DersID IN (SELECT DersID FROM DersTakip WHERE UserID=@0 AND Durum=2) ORDER BY Odev.EklenmeTarihi DESC",WebSecurity.CurrentUserId);
    
    db.Close();
}

@section Gezinti {
    <li class="active">@Resources.Resource.lblDerslerdeVerilenOdevler</li>
}


@section SayfaBasligi
{
   <h1>@Resources.Resource.lblDerslerdeVerilenOdevler</h1>
}

<div class="row">


   <div class="col-lg-12">

       <br>
               
       <table id="lstVerilenOdevler" class="table table-hover">
        <thead>
            <tr>  
                <th>@Resources.Resource.lblOdeviVeren</th> 
                <th>@Resources.Resource.lblIslemler</th>
                <th>@Resources.Resource.lblOdevBasligi</th>
               
              
                
                
               
            </tr>
        </thead>
         <tbody>
            @foreach (var odev in queryOdevler)
            {
                <tr>
                     <td>@HelperProfil.KucukKunye(odev.UserID)</td> 
                    <td>
                            
                          <div class="dropdown">

                        
                                  <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="btn btn-primary btn-xs">
                                    <i class="fa fa-cog"></i>
                                    <span class="caret"></span>
                                  </button>
                                  
                                  <ul class="dropdown-menu" aria-labelledby="dLabel">
                                        <li><a href="@Href("~/Odev/Goster?OdevID=")@odev.OdevID"><i class="fa fa-search-plus"></i> @Resources.Resource.lblOdeveGozat</a></li>
                                      
                                  </ul>
                            </div>
                    
                    </td>
                    <td><i class="fa fa-clock-o fa-2x text-success"></i> <a href="@Href("~/Odev/Goster?OdevID=")@odev.OdevID"> @odev.Baslik </a></td>                  
                   
                    
                   
                   
               </tr>
            }
         </tbody>
    </table>

        </div>

  
    </div>





   
@section js
{
  <script src="@Href("~/Shared/Plugins/datatables/jquery.dataTables.min.js")"></script>
  <script src="@Href("~/Shared/Plugins/datatables/dataTables.bootstrap.js")"></script>
  <script src="@Href(string.Format("~/Shared/Javascript/Dil/{0}/Odev/VerilenOdevler.js",dil))"></script>
  <script src="@Href("~/Shared/Javascript/Odev/VerilenOdevler.min.js")"></script>
}