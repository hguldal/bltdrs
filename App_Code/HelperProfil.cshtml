@helper KucukKunye(int UserID)
 {

   var db=Database.Open("fb1ae");

   var queryKisi=db.QuerySingle("SELECT * FROM Profiles LEFT JOIN Unvan ON Profiles.UnvanID=Unvan.UnvanID WHERE Profiles.UserID=@0",UserID);

   db.Close();
       <span><img src="http://bulutders.blob.core.windows.net/profilresimleri/@queryKisi.Avatar" class="img-rounded" style="width:48px;height: 48px"> <a href="@Href("~/Hesap/Profil?UserID=")@UserID"> @queryKisi.Unvan @queryKisi.Ad @queryKisi.Soyad @if (queryKisi.Onayli==1){ <i class="fa fa-check-circle" title="@Resources.Resource.lblKimligiDogrulanmisKullanici"></i>}</a></span>
        
 } 
 

